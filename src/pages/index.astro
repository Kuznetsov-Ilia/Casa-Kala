---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <img src="/VECT-01.svg" class="horizontal" alt="" />
  <img src="/VECT-02.svg" class="vertical" alt="" />
</Layout>

<style>
  :root {
    --astro-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
  }

  @media (orientation: landscape) {
    .horizontal {
      display: block;
    }
		.vertical {
			display: none;
		}
  }

  @media (orientation: portrait) {
    .horizontal {
      display: none;
    }
		.vertical {
			display: block;
		}

  }
</style>
